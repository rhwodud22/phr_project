<body>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form class="login100-form validate-form">

					<span class="login100-form-title p-b-70">계정정보</span>

					<div class="row p-t-40">
						<div style="font-size:1.2em; width:50%;">계정</div>
						<div>
							Huray_admin
						</div>
					</div>


					<div class="row p-t-40">
						<div style="font-size:1.2em; width:50%;">이름</div>
						<input type="text" class="input-profile" placeholder="최영빈">
					</div>


					<div class="row p-t-40">
						<div style="font-size:1.2em; width:50%;">소속</div>
						<input type="text" class="input-profile" placeholder="휴레이포지티브">
					</div>

   
					<div class="row p-t-40">
						<div style="font-size:1.2em; width:50%;">휴대폰번호</div>
						<input type="text" class="input-profile" placeholder="01012345678">
					</div>


					<div class="row p-t-40">
						<div style="font-size:1.2em; width:50%;">현재 비밀번호</div>
						<input type="password" onKeyup="checkPw(this);" class="input-profile" name="pass">
					</div>
					<div style="padding-left:7rem; padding-top:.5rem;">
						<span id="checkPw"></span>
					</div>


					<div class="row p-t-40">
						<div style="font-size:1.2em; width:50%;">새 비밀번호</div>
						<input type="password" onKeyup="checkNewpw(this);" class="input-profile" name="passNew">
					</div>
					<div style="padding-left:7rem; padding-top:.5rem;">
						<span id="checkNewpw"></span>
					</div>


					<div class="row p-t-40">
						<div style="font-size:1.2em; width:50%;">새 비밀번호 확인</div>
						<input type="password" onKeyup="recheckNewpw(this);" class="input-profile" name="passNew2">
					</div>
					<div style="padding-left:7rem; padding-top:.5rem;">
						<span id="recheckNewpw"></span>
					</div>


					<div class="container-profile100-form-btn">
						<button class="profile100-form-btn" onclick="btn_cancel()">
							취소
						</button>
						<button class="profile100-form-btn" onclick="btn_save()" style="margin-left:30px">
							저장
						</button>
					</div>

				</form>
			</div>
		</div>
	</div>


