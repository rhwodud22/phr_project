	<style>
		#toast {
			position: fixed;
			bottom: 30px;
			left: 50%; 
			padding: 15px 20px;
			transform: translate(-50%, 10px);
			border-radius: 30px;
			overflow: hidden;
			font-size: .8rem;
			opacity: 0;
			visibility: hidden;
			transition: opacity .5s, visibility .5s, transform .5s;
			background: rgba(0, 0, 0, .35);
			color: #fff;
			z-index: 10000;
		}

		#toast.reveal {
			opacity: 1;
			visibility: visible;
			transform: translate(-50%, 0)
		}
	</style>
</head>

<body>

	<div id="toast"></div>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">

				<form class="login100-form validate-form">
					<span class="login100-form-title">
						HeartLog
					</span>
					<span class="login100-form-avatar p-t-20">
						<img src="images/phr_web_icon_heartlog.png" alt="AVATAR">
					</span>

					<div class="wrap-input100 validate-input" data-validate="이름을 입력해주세요.">
						<input class="input100" type="text">
						<span class="focus-input100" data-placeholder="이름"></span>
					</div>


					<div class="wrap-input100 validate-input" data-validate="생년월일을 입력해주세요.">
						<input class="input100" type="text">
						<span class="focus-input100" data-placeholder="생년월일"></span>
					</div>  

					<div class="form-group row p-t-25">
						<label for="inputPassword" class="col-sm-2 col-form-label" style="font-size:large;">성별</label>
						<div class="col-sm-10">
							<select class="custom-select form-control" id="inputGroupSelect04"
								aria-label="Example select with button addon">
								<option value="1">남자</option>
								<option value="2">여자</option>
							</select>
						</div>
					</div>

					<div class="wrap-input100 validate-input" data-validate="환자번호를 입력해주세요.">
						<input class="input100" type="text" name="userid" onKeyup="checkUserid(this);">
						<span class="focus-input100" data-placeholder="환자 등록코드(환자번호)"></span>
					</div>
					<div style="padding-left:7rem; padding-top:.5rem;">
						<span id="checkUserid"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="전화번호를 입력해주세요.">
						<input class="input100" type="text">
						<span class="focus-input100" data-placeholder="전화번호"></span>
					</div>

					<div class="container-login100-form-btn p-t-30">
						<button class="login100-form-btn" onclick="toast('사전 등록 되었습니다.');">
							등록
						</button>
					</div>

				</form>

			</div>
		</div>
	</div>


	<div id="dropDownSelect1"></div>
